[core]
    hooksPath = ~/.config/git/hooks
    pager = delta

[include]
    path = ~/.config/git/hconfig.{{ .chezmoi.hostname }}

[user]
    name = Cassandra
    email = {{ b64dec "Z2l0QHNhcHBoaWNjby5kZQ==" }}
    signingkey = "ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIO9xeCEREM1kRjHme9h6w41x/DayIQYV5+Sb1GsJhW9k"

[init]
    defaultBranch = main

[interactive]
    diffFilter = delta --color-only

[commit]
    template = ~/.config/git/commit_template.txt
    gpgsign = true

[gpg]
    format = "ssh"

[gpg.ssh]
    program = "{{ .chezmoi.homeDir }}/.config/git/ssh-keygen"

[pull]
    rebase = true

[push]
    autoSetupRemote = true

[merge]
    conflictStyle = diff3

[rebase]
    autoStash = true

[branch]
    sort = -committerdate

[credential]
{{- if eq .chezmoi.os "darwin" }}
    helper = osxkeychain
{{- end }}
{{- if eq .chezmoi.os "linux" }}
    helper = libsecret
{{- end }}
    helper = netrc

[includeIf "gitdir:/Volumes/Work/"]
    path = ~/.config/git/work/config
[includeIf "gitdir:/Volumes/Work/"]
    path = /Volumes/Work/.gitconfig

[includeIf "gitdir:/work/"]
    path = ~/.config/git/work/config
[includeIf "gitdir:/work/"]
    path = /work/.gitconfig

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

